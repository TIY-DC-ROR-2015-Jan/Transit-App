<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag 'application' %>

  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/simplex/bootstrap.min.css">
  <%= stylesheet_link_tag "devise_stuff.css" %>

</head>
<body>

  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "RouteMe", home_path, class: "navbar-brand" %>
      </div>
      <center>
        <div class="navbar-collapse" id="navbar-main">
          <ul class="nav navbar-nav">
            <li class="active"><%= link_to "Home", home_path %></li>
          </ul>
          <% if current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to("Sign Out", destroy_user_session_path, method: :delete) %></li>
          </ul>
          <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Sign In", new_user_session_path %></li>
            <li><%= link_to "Register", new_user_registration_path %></li>
          </ul>
          <% end %>
        </div>
      </center>
    </div>
  </div>

  <% flash.each do |key, value| %>
  <div class="<%= flash_class(key) %>"><%= value %></div>
  <% end %>

  <div class="container">

<%= yield %>
  
  </div>


<!-- Templates -->

<script type = "x-handlebars-template" class = "bus-template">
  <tr class = "{{id}}">
    <td>{{status}}</td>
    <td>{{location}}</td>
    <td>{{time}}</td>
  </tr>
</script>

<script type = "x-handlebars-template" class = "rail-template">
  <tr class = "{{id}}">
    <td>{{line}}</td>
    <td>{{stop}}</td>
    <td>{{time}}</td>
  </tr>
</script>

<script type = "x-handlebars-template" class = "zipcar-template">
  <tr>
    <td>{{status}}</td>
    <td>{{location}}</td>
    <td>{{nov}}</td>
  </tr>
</script>

<script type = "x-handlebars-template" class = "uber-template">
  <tr>
    <td>{{type}}</td>
    <td>{{nov}}</td>
  </tr>
</script>

<script type = "x-handlebars-template" class = "capital-bikeshare-template">
  <th>Capital Bikeshare</th><th></th><th>bikes</th><th>empty</th>
  <tr>
    <td>{{status}}</td>
    <td>{{location}}</td>
    <td>{{bikes}}</td>
    <td>{{empty}}</td>
  </tr>
</script>

<!-- end Templates -->



</body>
</html>
